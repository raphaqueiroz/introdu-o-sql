                    "type": "boolean"
                },
                "s3Region": {
                    "type": "string"
                },
                "s3ServiceIds": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "s3UseSSL": {
                    "type": "boolean"
                },
                "savePassword": {
                    "$ref": "#/definitions/SavePasswordType"
                },
                "showHidden": {
                    "description": "show hidden file on sftp or ftp connection.",
                    "type": "boolean"
                },
                "snowflakeAccount": {
                    "description": "Snowflake account id, see https://docs.snowflake.com/en/user-guide/connecting",
                    "type": "string"
                },
                "socketPath": {
                    "type": "string"
                },
                "sort": {
                    "type": [
                        "string",
                        "number"
                    ]
                },
                "ssh": {
                    "$ref": "#/definitions/SSHConfig",
                    "description": "SSH tunnel config."
                },
                "sshConnect": {
                    "$ref": "#/definitions/SSHConfig",
                    "description": "SSH connection config."
                },
                "useConnectionString": {
                    "type": "boolean"
                },
                "useSSL": {
                    "type": "boolean"
                },
                "user": {
                    "type": "string"
                },
                "usingSSH": {
                    "description": "whether to use ssh tunnel",
                    "type": "boolean"
                }
            },
            "required": [
                "host"
            ],
            "type": "object"
        },
        "SQLServerConnectType": {
            "enum": [
                "azure-active-directory-password",
                "azure-active-directory-service-principal-secret",
                "default",
                "ntlm"
            ],
            "type": "string"
        },
        "SSHConfig": {
            "properties": {
                "connectTimeout": {
                    "type": "number"
                },
                "ftpRoot": {
                    "type": "string"
                },
                "host": {
                    "type": "string"
                },
                "key": {
                    "description": "Use only on SSH connections",
                    "type": "string"
                },
                "passphrase": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "port": {
                    "type": "number"
                },
                "privateKeyPath": {
                    "type": "string"
                },
                "serverType": {
                    "enum": [
                        "linux",
                        "windows"
                    ],
                    "type": "string"
                },
                "type": {
                    "description": "password privateKey",
                    "type": "string"
                },
                "username": {
                    "type": "string"
                }
            },
            "required": [
                "host",
                "port",
                "username"
            ],
            "type": "object"
        },
        "SavePasswordType": {
            "enum": [
                "Forever",
                "Never"
            ],
            "type": "string"
        }
