                },
                "domain": {
                    "type": "string"
                },
                "driver": {
                    "type": "string"
                },
                "driverPath": {
                    "type": "string"
                },
                "encoding": {
                    "description": "ftp transfer encoding",
                    "type": "string"
                },
                "encrypt": {
                    "description": "mssql only",
                    "type": "boolean"
                },
                "esAuth": {
                    "enum": [
                        "account",
                        "none",
                        "token"
                    ],
                    "type": "string"
                },
                "esToken": {
                    "type": "string"
                },
                "esUrl": {
                    "description": "using when ssh tunnel",
                    "type": "string"
                },
                "es_scheme": {
                    "description": "es only",
                    "type": "string"
                },
                "global": {
                    "type": "boolean"
                },
                "group": {
                    "description": "conneciton group",
                    "type": "string"
                },
                "hideSystemSchema": {
                    "type": "boolean"
