    "properties": {
        "database": {
            "additionalProperties": {
                "$ref": "#/definitions/NodeConfg"
            },
            "type": "object"
        },
        "database.connections": {
            "additionalProperties": {
                "$ref": "#/definitions/NodeConfg"
            },
            "type": "object"
        },
        "nosql": {
            "additionalProperties": {
                "$ref": "#/definitions/NodeConfg"
            },
            "type": "object"
        },
        "nosql.connections": {
            "additionalProperties": {
                "$ref": "#/definitions/NodeConfg"
            },
            "type": "object"
        }
    },
    "type": "object"
}

